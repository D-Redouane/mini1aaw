<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User List</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        html,
        body {
            height: 100%;
        }

        body {
            background-image: url('https://img.freepik.com/premium-photo/blur-background-delivery-product-van-infront-home-shipping-goods-e-commerce-concept_7189-2292.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }


        body {
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
</head>
<body>
    <div class="container">
      <h3>Add New User</h3>
        <form action="/users" method="POST" class="mt-3">
            <div class="mb-3">
                <input type="text" name="name" class="form-control" placeholder="Name" required>
            </div>
            <div class="mb-3">
                <input type="email" name="email" class="form-control" placeholder="Email" required>
            </div>
            <div class="mb-3">
                <input type="number" name="age" class="form-control" placeholder="Age" required>
            </div>
            <div class="mb-3">
                <select name="role" class="form-control" required>
                    <option value="manager">Manager</option>
                    <option value="client">Client</option>
                </select>
            </div>
            <div class="mb-3">
                <input type="password" name="password" class="form-control" placeholder="Password" required>
            </div>
            <button type="submit" class="btn btn-primary">Add User</button>
        </form>

        <br><br><br><br>
    
        <h1>User List</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Age</th>
                    <th>Role</th>
                    <th>Action</th> <!-- Add Action column for delete and edit buttons -->
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.age %></td>
                    <td><%= user.role %></td>
                    <td>
                        <form action="/users/<%= user._id %>/delete" method="POST" style="display: inline;">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                        <a href="/users/<%= user._id %>/edit" class="btn btn-primary">Edit</a>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
            

        
    </div>
</body>
</html>
