<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Détails du produit</title>
    <link rel="stylesheet" href="../public/css/css.css">
    <style>
        /* Vos styles CSS ici */
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }
        .container {
            max-width: 800px;
            margin: auto;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #fff;
            margin-top: 50px;
        }
        h1 {
            text-align: center;
            margin-bottom: 30px;
        }
        p {
            margin-bottom: 10px;
        }
        img {
            display: block;
            max-width: 100%;
            margin: auto;
            border-radius: 10px;
        }
        button {
            background-color: #dc3545;
            color: #fff;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            cursor: pointer;
            font-size: 16px;
            margin-top: 20px;
            display: block;
            margin-left: auto;
            margin-right: auto;
        }
        button:hover {
            background-color: #c82333;
        }
        a {
            display: block;
            text-align: center;
            margin-top: 20px;
            text-decoration: none;
            color: #007bff;
        }
        a:hover {
            color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Détails du produit</h1>
        <h2><%= product.name %></h2>
        <p>Prix : <%= product.price %> €</p>
        <p>Description : <%= product.description %></p>
        <p>Catégorie : <%= product.category %></p>
        <p>Quantité en stock : <%= product.quantity %></p>
        <img src="<%= product.imageURL %>" alt="<%= product.name %>">
        <form id="deleteForm" action="/products/<%= product.id %>/delete" method="POST">
            <button type="submit">Supprimer</button>
        </form>
        <a href="/products">Retour à la liste des produits</a>
    </div>

    <script>
        // JavaScript pour la gestion de la suppression
        document.addEventListener('DOMContentLoaded', () => {
            const deleteForm = document.getElementById('deleteForm');

            deleteForm.addEventListener('submit', async (event) => {
                event.preventDefault();
                
                try {
                    const response = await fetch(deleteForm.getAttribute('action'), {
                        method: 'DELETE'
                    });

                    if (response.ok) {
                        window.location.href = '/products';
                    } else {
                        console.error('Erreur lors de la suppression du produit');
                    }
                } catch (error) {
                    console.error('Erreur lors de la suppression du produit :', error);
                }
            });
        });
    </script>
</body>
</html>
